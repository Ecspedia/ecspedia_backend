# GraphQL mutation: create booking
POST http://localhost:8080/graphql
Content-Type: application/json

{
  "query": "mutation CreateBooking($hotelId: String!, $userId: ID!, $startTime: String!, $endTime: String!, $price: Long, $currency: String) { createBooking(hotelId: $hotelId, userId: $userId, startTime: $startTime, endTime: $endTime, price: $price, currency: $currency) { id hotelId userId startTime endTime status price currency createdAt confirmedAt canceledAt } }",
  "variables": {
    "hotelId": "REPLACE_WITH_HOTEL_ID",
    "userId": "REPLACE_WITH_USER_ID",
    "startTime": "2024-11-01T15:00:00Z",
    "endTime": "2024-11-05T11:00:00Z",
    "price": 45000,
    "currency": "USD"
  }
}

